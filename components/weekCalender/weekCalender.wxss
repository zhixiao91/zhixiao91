/* components/weekCalender/weekCalender.wxss */

@import "/styles/iconfont.wxss";

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
}

.column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  margin-top: 10rpx;
  flex: 1;
}

.select-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  margin-top: 10rpx;
  flex: 1;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #1296db;
}

.timeType {
  font-size: 35rpx;
  font-weight: bold;
}

.dateType {
  font-size: 35rpx;
  font-weight: bold;
}

.weekType {
  font-size: 28rpx;
  color: darkgray;
}

.line {
  height: 1rpx;
  width: 100%;
  background-color: gainsboro;
}

.line-shadow {
  height: 3rpx;
  width: 100%;
  background-color: gainsboro;
  box-shadow: 5px 0px 5px 0px gainsboro;
}