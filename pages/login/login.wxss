/* pages/login/login.wxss */

page {
  background-color: #fff;
}

.logowrap {
  margin: 100rpx auto;
  text-align: center;
}

.logowrap image {
  width: 200rpx;
  height: 200rpx;
}

.phoneinput {
  height: 100rpx;
  margin: 100rpx 80rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid gray;
}

image {
  width: 50rpx;
  height: 50rpx;
}

.codeinput {
  height: 100rpx;
  margin: 0 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid gray;
}

input {
  margin: 0 20rpx;
}

.codebut {
  color: blue;
  height: 100rpx;
  line-height: 100rpx;
}

.codeinput button {
  /* margin-top: 100rpx; */
  /* background-color: #fff; */
  color: blue;
  font-weight: 400;
  /* width: 100rpx; */
}

.codeinput input {
  flex: 1;
}

.loginbtn {
  margin: 80rpx auto 0;
  margin-top: 80rpx;
  text-align: center;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  width: 200rpx;
  border: 2rpx solid #d3d3d3;
  border-radius: 40rpx;
  align-content: center;
  background-color: #f8f8f8;
}