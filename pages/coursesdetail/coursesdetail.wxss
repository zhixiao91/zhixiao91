/* pages/coursesdetail/coursesdetail.wxss */

.courseinfo {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #efefef;
}

.courseinfo-box {
  padding: 20rpx;
}

.courseinfo-box .coursetitle .courseType {
  background-color: green;
  color: #fff;
  border-radius: 10rpx;
  padding: 4rpx 8rpx;
  font-size: 28rpx;
  width: 32rpx;
  height: 32rpx;
}

.courseinfo-box .coursetitle .courseTitle {
  margin-left: 20rpx;
  /* border-width: 900; */
}

.schoolname {
  margin-top: 20rpx;
  color: #919191;
  font-size: 28rpx;
}

.courseother {
  color: #919191;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
}

.courseother view {
  margin-right: 40rpx;
}

.subjects {
  color: #919191;
  font-size: 28rpx;
}

.lineview {
  background-color: #efefef;
  height: 20rpx;
}

.tuition {
  color: #919191;
  font-size: 28rpx;
}

.consult {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}