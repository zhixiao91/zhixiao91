/* pages/tradingrecord/tradingrecord.wxss */

page {
  background-color: #efefef;
}

.container {
  display: flex;
  flex-direction: column;
}

.item {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 20rpx;
}

.item .coursesview {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
}

.item .coursesview .coursname {
  font-size: 28rpx;
  /* margin-left: 20rpx; */
}

.item .coursesview .time {
  font-size: 28rpx;
  /* position: absolute;
  right: 70rpx; */
  color: #5b5b5b;
}

.item .lineview {
  /* margin: 0 20rpx; */
  background-color: #cecece;
  height: 2rpx;
}

.item .payinfoview {
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item .payinfoview .leftview {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}

.item .payinfoview .oneview {
  margin-bottom: 20rpx;
}

.item .applyview {
  margin-top: 50rpx;
  background-color: #79cdff;
  text-align: center;
  padding: 8rpx 16rpx;
  height: 40rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  color: #fff;
}